generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  role      Role
  createdAt DateTime @default(now())
  persona   Persona?
}

enum Role {
  ADMIN
  INMOBILIARIA
  GESTOR
  TECNICO
}

model Persona {
  id        Int       @id @default(autoincrement())
  nombre    String
  apellido  String
  cuil      String
  contacto  String?
  userId    Int?      @unique
  user      User?     @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updateAt  DateTime?
}
